        <StackPanel>
            <Image Source = "./Images/pyramid.jpg"></Image>
        </StackPanel>
        

        <Canvas
        Grid.Row="0"
        Grid.RowSpan="2"
        Grid.Column="0"
        Grid.ColumnSpan="3">
            <Image 
            Name="Description_png"
            Canvas.Right="16"
            Source="C:\Users\Joseph\Source\Repos\TimeMachine\TIme Machine\Images\information.png"
            Width="48"
            Height="66" Canvas.Left="752" Canvas.Top="1">
                <Image.ToolTip>
                    <ToolTip x:Name="tooltip1">
                        <TextBlock x:Name="tooltiptext">
                            The ancient Egyptians builts pyramids
